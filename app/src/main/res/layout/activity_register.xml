<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context=".Register">


    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="8dp">

        <ImageView
            android:id="@+id/iv_title"
            android:layout_width="match_parent"
            android:layout_height="61dp"
            android:src="@drawable/pont" />

        <androidx.appcompat.widget.AppCompatButton
            android:id="@+id/bt_register_back"
            android:layout_width="38dp"
            android:layout_height="38dp"
            android:layout_marginStart="12dp"
            android:layout_marginTop="13dp"
            android:background="@drawable/back_press"
            android:backgroundTint="#716C6C"
            android:textSize="20sp"
            android:textStyle="bold" />
    </RelativeLayout>

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:fillViewport="true"
        android:layout_weight="1">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="vertical">

            <LinearLayout
                android:id="@+id/linearLayout11"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="vertical"
                android:layout_marginTop="20dp"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"/>

            <LinearLayout
                android:id="@+id/ll_register_5"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_name"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:background="#00000000"
                    android:hint="이름"
                    android:inputType="textPersonName"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

                <Button
                    android:id="@+id/bt_register_id3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:text="중복체크"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_1"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="아이디"
                    android:background="#00000000"
                    android:inputType="textPersonName"
                    android:textSize="14dp" />

                <Button
                    android:id="@+id/bt_register_id"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:textColor="#FFFFFF"
                    android:text="중복체크"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_2"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_pw"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:layout_weight="1"
                    android:hint="패스워드"
                    android:background="#00000000"
                    android:textSize="14dp"
                    android:inputType="textPassword"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

                <Button
                    android:id="@+id/bt_register_id4"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:text="중복체크"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_3"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_pw2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="패스워드 확인"
                    android:inputType="textPassword"
                    android:background="#00000000"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

                <Button
                    android:id="@+id/bt_register_id5"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:text="중복체크"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_4"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:ems="10"
                    android:hint="닉네임"
                    android:background="#00000000"
                    android:textSize="14dp"
                    android:inputType="textPersonName" />

                <Button
                    android:id="@+id/bt_register_nick"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginTop="5dp"
                    android:layout_marginBottom="5dp"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:textColor="#FFFFFF"
                    android:text="중복체크"
                    android:textSize="12sp"
                    android:textStyle="bold" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_6"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_email"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="이메일"
                    android:inputType="textPersonName"
                    android:background="#00000000"
                    android:textSize="14dp"
                    android:layout_weight="1"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

                <Button
                    android:id="@+id/bt_register_nick2"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"

                    android:backgroundTint="#EB7777"
                    android:text="중복체크"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_7"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_phone"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:ems="10"
                    android:hint="전화번호"
                    android:layout_weight="1"
                    android:inputType="textPersonName"
                    android:background="#00000000"
                    android:textSize="14dp"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

                <Button
                    android:id="@+id/bt_register_nick3"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="15dp"
                    android:layout_marginEnd="30dp"
                    android:backgroundTint="#EB7777"
                    android:text="중복체크"
                    android:textSize="14sp"
                    android:textStyle="bold"
                    android:visibility="invisible" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_8"
                android:layout_width="match_parent"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:background="@drawable/line_bottom"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

            </LinearLayout>

            <LinearLayout
                android:id="@+id/ll_register_9"
                android:layout_width="match_parent"
                android:layout_height="0dp"
                android:layout_weight="1"
                android:layout_marginStart="20dp"
                android:layout_marginEnd="20dp"
                android:orientation="horizontal">

                <EditText
                    android:id="@+id/et_register_career"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:ems="10"
                    android:hint="경력사항"
                    android:inputType="textPersonName"
                    android:textSize="14dp"
                    android:background="@drawable/line_bottom"
                    app:layout_constraintEnd_toEndOf="@+id/et_register_id"
                    app:layout_constraintStart_toStartOf="@+id/et_register_id"
                    app:layout_constraintTop_toBottomOf="@+id/et_register_id" />

            </LinearLayout>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="8dp"
                android:orientation="horizontal">

                <Button
                    android:id="@+id/bt_register_cancle"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="50dp"
                    android:layout_marginEnd="10dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EB7777"
                    android:textColor="#FFFFFF"
                    android:text="취소"
                    android:textStyle="bold" />

                <Button
                    android:id="@+id/bt_register_register"
                    android:layout_width="0dp"
                    android:layout_height="wrap_content"
                    android:layout_marginStart="10dp"
                    android:layout_marginEnd="50dp"
                    android:layout_weight="1"
                    android:backgroundTint="#EB7777"
                    android:textColor="#FFFFFF"
                    android:text="회원가입"
                    android:textStyle="bold" />

            </LinearLayout>

        </LinearLayout>
    </ScrollView>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_gravity="bottom"
        android:orientation="vertical">

        <LinearLayout
            android:id="@+id/lo_auction_layout"
            android:layout_width="match_parent"
            android:layout_height="50dp"
            android:background="@drawable/line_top"
            android:orientation="horizontal">

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_auction"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/category_press" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_chat"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/chat2_press" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_home"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/home_press" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_scrap"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/scrap_press" />

            <androidx.appcompat.widget.AppCompatButton
                android:id="@+id/bt_myPage"
                android:layout_width="69dp"
                android:layout_height="match_parent"
                android:layout_weight="1"
                android:background="@drawable/mypage_icon_press" />

        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal">

            <TextView
                android:id="@+id/textView2"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="경매"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView3"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="채팅"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView6"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="홈"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView5"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="스크랩"
                android:textAlignment="center"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textStyle="bold"/>

            <TextView
                android:id="@+id/textView"
                android:layout_width="35dp"
                android:layout_height="wrap_content"
                android:layout_weight="1"
                android:text="내정보"
                android:textSize="12dp"
                android:textColor="@color/black"
                android:textAlignment="center"
                android:textStyle="bold"/>
        </LinearLayout>

    </LinearLayout>


</LinearLayout>